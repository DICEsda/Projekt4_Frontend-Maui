<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinanceTracker.Views.JobsPage"
             xmlns:local="clr-namespace:FinanceTracker.ViewModels"
             xmlns:style="clr-namespace:FinanceTracker.Resources.Styles"
             xmlns:template="clr-namespace:FinanceTracker.Views.Templates"
             xmlns:model="clr-namespace:FinanceTracker.Models"  
             x:DataType="local:JobsViewModel"
             x:Name="PageRoot">

    <ContentPage.BindingContext>
        <!-- Set the BindingContext to JobsViewModel -->
        <local:JobsViewModel />
    </ContentPage.BindingContext>

    <Grid ColumnDefinitions="*,2*" ColumnSpacing="20">
        <!-- Left Column - Job List Overview -->
        <VerticalStackLayout Grid.Column="0" Padding="10">
            <Label Text="Job Overview" 
                   FontSize="18"
                   FontAttributes="Bold"
                   Margin="0,0,0,10"/>

            <CollectionView ItemsSource="{Binding Jobs}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="15" 
                               CornerRadius="10"
                               Margin="0,0,0,10"
                               BackgroundColor="{StaticResource CardBackground}">
                            <VerticalStackLayout>
                                <!-- Ensure that the 'Job' model has these properties -->
                                <Label Text="Placeholder" 
                                       FontSize="16"
                                       FontAttributes="Bold"/>
                                <Label Text="{Binding EmploymentType}"
                                       FontSize="14"/>
                                <Label Text="{Binding PayRate, StringFormat='Rate: {0} DKK/h'}"
                                       FontSize="14"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>

        <!-- Right Column - Scrollable Form -->
        <ScrollView Grid.Column="1" Padding="10">
            <VerticalStackLayout Spacing="15">
                <Label Text="Add/Edit Job" 
                       FontSize="18"
                       FontAttributes="Bold"/>

                <!-- Job Name -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Job name:"/>
                    <Entry Text="{Binding CurrentJob.Name}" 
                           Placeholder="Job X"/>
                </VerticalStackLayout>

                <!-- Employment Type -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Employment type:"/>
                    <Picker Title="Select type"
                            ItemsSource="{Binding EmploymentTypes}"
                            SelectedItem="{Binding CurrentJob.EmploymentType}">
                        <Picker.Items>
                            <x:String>Full-time</x:String>
                            <x:String>Part-time</x:String>
                            <x:String>Hourly</x:String>
                        </Picker.Items>
                    </Picker>
                </VerticalStackLayout>

                <!-- Tax Card -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Tax card:"/>
                    <HorizontalStackLayout Spacing="10">
                        <RadioButton Content="A-card" 
                                    IsChecked="{Binding CurrentJob.IsACard}"/>
                        <RadioButton Content="B-card" 
                                    IsChecked="{Binding CurrentJob.IsBCard}"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>

                <!-- CVR -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="CVR:"/>
                    <Entry Text="{Binding CurrentJob.CVR}" 
                           Placeholder="1826614"
                           Keyboard="Numeric"/>
                </VerticalStackLayout>

                <!-- Hourly Rate -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Hourly Rate (DKK/h):"/>
                    <Entry Text="{Binding CurrentJob.PayRate}" 
                           Placeholder="140"
                           Keyboard="Numeric"/>
                </VerticalStackLayout>

                <!-- Pay Period -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Pay period:"/>
                    <HorizontalStackLayout Spacing="5">
                        <Entry WidthRequest="50"
                               Text="{Binding CurrentJob.PayPeriodStart}"
                               Placeholder="21"/>
                        <Label Text="-" VerticalOptions="Center"/>
                        <Entry WidthRequest="50"
                               Text="{Binding CurrentJob.PayPeriodEnd}"
                               Placeholder="20"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>

                <!-- Supplements -->
                <VerticalStackLayout Spacing="10">
                    <Label Text="Add supplement:" 
                           FontAttributes="Bold"/>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Name:"/>
                        <Entry Text="{Binding CurrentSupplement.Name}" 
                               Placeholder="Night"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Day(s):"/>
                        <Entry Text="{Binding CurrentSupplement.Days}" 
                               Placeholder="Weekends"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Time range:"/>
                        <HorizontalStackLayout Spacing="5">
                            <TimePicker Time="{Binding CurrentSupplement.StartTime}"
                                       Format="HH:mm"/>
                            <Label Text="-" VerticalOptions="Center"/>
                            <TimePicker Time="{Binding CurrentSupplement.EndTime}"
                                       Format="HH:mm"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Extra rate:"/>
                        <Entry Text="{Binding CurrentSupplement.ExtraRate}" 
                               Placeholder="DKK/hour"
                               Keyboard="Numeric"/>
                    </VerticalStackLayout>

                    <Button Text="+ Add another supplement"
                            Command="{Binding AddSupplementCommand}"
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource Primary}"/>
                </VerticalStackLayout>

                <!-- Save Button -->
                <Button Text="Save Job" 
                        Command="{Binding SaveJobCommand}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        CornerRadius="10"
                        Margin="0,20,0,0"/>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
