<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:FinanceTracker.ViewModels"
             x:Class="FinanceTracker.Views.JobsPage"
             x:DataType="viewmodels:JobsViewModel"
             xmlns:services="clr-namespace:MyApp.Services"
             xmlns:style="clr-namespace:FinanceTracker.Resources.Styles"
             BackgroundColor="#1E1E1E">

    <ScrollView>
        <Grid Padding="15" RowSpacing="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Form Section -->
            <VerticalStackLayout Grid.Row="0"
                               Spacing="15"
                               Padding="10"
                               MaximumWidthRequest="600"
                               HorizontalOptions="Fill">

                <Label Text="{Binding [CreateJob], Source={x:Static services:TranslationService.Instance}}"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="{StaticResource TitleColor}"
                       Margin="0,0,0,10"/>

                <!-- Form fields -->
                <Label Text="{Binding [Title], Source={x:Static services:TranslationService.Instance}}" 
                       FontSize="14" 
                       TextColor="{StaticResource BodyColor}"/>
                <Border BackgroundColor="White" 
                        Stroke="#ccc" 
                        StrokeThickness="1" 
                        StrokeShape="RoundRectangle 8" 
                        Padding="15,5">
                    <Entry Text="{Binding Title}" 
                           TextColor="Black" 
                           BackgroundColor="Transparent"/>
                </Border>

                <Label Text="{Binding [CompanyName], Source={x:Static services:TranslationService.Instance}}" 
                       FontSize="14" 
                       TextColor="{StaticResource BodyColor}"/>
                <Border BackgroundColor="White" 
                        Stroke="#ccc" 
                        StrokeThickness="1" 
                        StrokeShape="RoundRectangle 8" 
                        Padding="15,5">
                    <Entry Text="{Binding CompanyName}" 
                           TextColor="Black" 
                           BackgroundColor="Transparent"/>
                </Border>

                <Label Text="{Binding [HireType], Source={x:Static services:TranslationService.Instance}}" 
                       FontSize="14" 
                       TextColor="{StaticResource BodyColor}"/>
                <Border BackgroundColor="White" 
                        Stroke="#ccc" 
                        StrokeThickness="1" 
                        StrokeShape="RoundRectangle 8" 
                        Padding="15,5">
                    <Entry Text="{Binding EmploymentType}" 
                           TextColor="Black" 
                           BackgroundColor="Transparent"/>
                </Border>

                <Label Text="{Binding [HourlyRate], Source={x:Static services:TranslationService.Instance}}" 
                       FontSize="14" 
                       TextColor="{StaticResource BodyColor}"/>
                <Border BackgroundColor="White" 
                        Stroke="#ccc" 
                        StrokeThickness="1" 
                        StrokeShape="RoundRectangle 8" 
                        Padding="15,5">
                    <Entry Text="{Binding HourlyRate}" 
                           Keyboard="Numeric" 
                           TextColor="Black" 
                           BackgroundColor="Transparent"/>
                </Border>

                <Label Text="{Binding [TaxCard], Source={x:Static services:TranslationService.Instance}}" 
                       FontSize="14" 
                       TextColor="{StaticResource BodyColor}"/>
                <Border BackgroundColor="White" 
                        Stroke="#ccc" 
                        StrokeThickness="1" 
                        StrokeShape="RoundRectangle 8" 
                        Padding="15,5">
                    <Entry Text="{Binding TaxCard}" 
                           TextColor="Black" 
                           BackgroundColor="Transparent"/>
                </Border>
            </VerticalStackLayout>

            <!-- Action Buttons -->
            <HorizontalStackLayout Grid.Row="1"
                                 Spacing="10"
                                 HorizontalOptions="Center"
                                 Margin="0,10">

                <Button Text="{Binding [RegisterJobBtn], Source={x:Static services:TranslationService.Instance}}"
                        Command="{Binding RegisterJobCommand}"
                        BackgroundColor="DodgerBlue"
                        TextColor="White"
                        CornerRadius="8"
                        HeightRequest="45"
                        Padding="20,0"
                        FontAttributes="Bold"/>

                <Button Text="{Binding [GetJobsBtn], Source={x:Static services:TranslationService.Instance}}"
                        Command="{Binding GetAllJobsCommand}"
                        BackgroundColor="LightGreen"
                        TextColor="Black"
                        CornerRadius="8"
                        HeightRequest="45"
                        Padding="20,0"
                        FontAttributes="Bold"/>
            </HorizontalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>
