<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="FinanceTracker.Views.RegisterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:FinanceTracker.Views"
    BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#121212}"
    mc:Ignorable="d">

    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Spacing="25" Padding="30,40" VerticalOptions="Center" >

                <!-- Header -->
                <Label Text="Register" 
                FontSize="28" 
                FontAttributes="Bold"
                HorizontalOptions="Center"
                TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"/>


                    <VerticalStackLayout Spacing="0">
                        <!-- Full Name -->
                        <Entry Margin="500,0"
                        Placeholder="Full name (e.g., Jane Doe)" 
                        Style="{StaticResource RoundedEntry}"
                        TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"/>
                    <BoxView HeightRequest="1" Color="#F0F0F0" Margin="500,0"/>

                        <!-- Email -->
                        <Entry Placeholder="Email address (e.g., name@mail.com)" 
                        Margin="500,0"
                        Keyboard="Email"
                        Style="{StaticResource RoundedEntry}"
                        TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"/>
                    <BoxView HeightRequest="1" Color="#F0F0F0" Margin="500,0"/>

                        <!-- Phone -->
                        <Entry Placeholder="Phone (e.g., +45 12 34 56 78)" 
                        Margin="500,0"
                        Keyboard="Telephone"
                        Style="{StaticResource RoundedEntry}"
                        TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"/>
                    <BoxView HeightRequest="1" Color="#F0F0F0" Margin="500,0"/>

                        <!-- Password -->
                        <Entry Placeholder="Password"
                        Margin="500,0"
                        IsPassword="True"
                        Style="{StaticResource RoundedEntry}"
                        TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"/>
                    </VerticalStackLayout>


                <!-- Save Button -->
                <Button Text="Save Profile" 
                Margin="500,0"
                BackgroundColor="#6200EE"
                TextColor="White"
                CornerRadius="12"
                HeightRequest="50"
                HorizontalOptions="Fill"/>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
