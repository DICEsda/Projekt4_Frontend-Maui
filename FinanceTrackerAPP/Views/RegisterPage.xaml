<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinanceTracker.Views.RegisterPage"
             Title="Register">

    <ScrollView>
        <Grid Padding="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

        <VerticalStackLayout Grid.Column="1"
                                VerticalOptions="Center"
                                HorizontalOptions="Center"
                                WidthRequest="400"
                                Padding="10">

                <Image Source="user_icon.png"
                       HeightRequest="100"
                       WidthRequest="100"
                       HorizontalOptions="Center" />

                <Label Text="Register"
                       FontSize="35"
                       Margin="0,15"
                       FontAttributes="Bold"
                       HorizontalOptions="Start"
                       TextColor="{StaticResource TitleColor}" />

                <Label Text="Full Name"
                       FontSize="14"
                       TextColor="{StaticResource BodyColor}" />
            
                <Border BackgroundColor="White"
                        Stroke="#ccc"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 10"
                        Padding="5"
                        Margin="0,5,0,15">
                    <Entry Placeholder="Full name (e.g., Jane Doe)"
                           Text="{Binding FullName}"
                           TextColor="Black"
                           BackgroundColor="Transparent" />
                </Border>

                <Label Text="Email"
                       FontSize="14"
                       TextColor="{StaticResource BodyColor}" />
                <Border BackgroundColor="White"
                        Stroke="#ccc"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 10"
                        Padding="5"
                        Margin="0,5,0,15">
                    <Entry Placeholder="Email address"
                           Text="{Binding Email}"
                           Keyboard="Email"
                           TextColor="Black"
                           BackgroundColor="Transparent" />
                </Border>

                <Label Text="Phone"
                       FontSize="14"
                       TextColor="{StaticResource BodyColor}" />
                <Border BackgroundColor="White"
                        Stroke="#ccc"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 10"
                        Padding="5"
                        Margin="0,5,0,15">
                    <Entry Placeholder="Phone (e.g., +45 12 34 56 78)"
                           Keyboard="Telephone"
                           Text="{Binding Phone}"
                           TextColor="Black"
                           BackgroundColor="Transparent" />
                </Border>

                <Label Text="Password"
                       FontSize="14"
                       TextColor="{StaticResource BodyColor}" />
                <Border BackgroundColor="White"
                        Stroke="#ccc"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 10"
                        Padding="5"
                        Margin="0,5,0,20">
                    <Entry Placeholder="Password"
                           IsPassword="True"
                           Text="{Binding Password}"
                           TextColor="Black"
                           BackgroundColor="Transparent" />
                </Border>

                <Button Text="Save Profile"
                        Command="{Binding RegisterUserCommand}"
                        BackgroundColor="#0078D7"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        HeightRequest="50" />
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>
