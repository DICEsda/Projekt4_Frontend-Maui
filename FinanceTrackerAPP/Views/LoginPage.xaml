<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:FinanceTracker.ViewModels"
             x:Class="FinanceTracker.Views.LoginPage"
             BackgroundColor="#E8F8F8"
             Title="Login">

    <ScrollView>
        <Grid Padding="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Image Source="user_icon.png"
                   HeightRequest="100"
                   WidthRequest="100"
                   HorizontalOptions="Center"
                   Margin="0,10"
                   Grid.Row="0" />

            <Label Text="Sign in"
                   FontSize="20"
                   FontAttributes="Bold"
                   HorizontalOptions="Start"
                   Margin="0,20,0,10"
                   Grid.Row="1" />

            <Label Text="Email / Phone"
                   FontSize="14"
                   Margin="0,0,0,5"
                   Grid.Row="2"
                   TextColor="#333" />

            <Border BackgroundColor="White"
                    Stroke="#ccc"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 10"
                    Grid.Row="3"
                    Padding="5">
                <Entry Placeholder="eg. name@mail.com"
                       Text="{Binding Email}"
                       TextColor="Black"
                       BackgroundColor="Transparent" />
            </Border>

            <Label Text="Password"
                   FontSize="14"
                   Margin="0,10,0,5"
                   Grid.Row="4"
                   TextColor="#333" />

            <Border BackgroundColor="White"
                    Stroke="#ccc"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 10"
                    Grid.Row="5"
                    Padding="5">
                <Entry Placeholder="Enter your password"
                       Text="{Binding Password}"
                       IsPassword="True"
                       TextColor="Black"
                       BackgroundColor="Transparent" />
            </Border>

            <Button Text="Login"
                    Grid.Row="6"
                    Margin="0,20,0,0"
                    BackgroundColor="#0078D7"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    HeightRequest="50"
                    Command="{Binding LoginCommand}" />

            <StackLayout Grid.Row="7"
                         Orientation="Vertical"
                         Margin="0,10,0,0"
                         HorizontalOptions="Center">
                <Label Text="or"
                       FontSize="12"
                       TextColor="Gray"
                       HorizontalOptions="Center" />
                <Button Text="Register"
                        BackgroundColor="Transparent"
                        TextColor="#0078D7"
                        FontAttributes="Bold"
                        BorderColor="#0078D7"
                        BorderWidth="1"
                        CornerRadius="10"
                        WidthRequest="200"
                        Command="{Binding NavigateToRegisterPageCommand}" />
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>