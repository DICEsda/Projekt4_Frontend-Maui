<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinanceTrackerAPP.MainPage">


    <Grid Padding="20">
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>

        <StackLayout VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="500">
            <Label Text="Register" FontSize="Header" TextColor="NavajoWhite" />

            <Label Text="Full Name" Margin="10" />
            <Entry Text="{Binding User.Adresse}" 
                   Placeholder="Enter your first and last name" />

            <Label Text="Phone Number" Margin="10" />
            <Entry Text="{Binding User.Name}" 
                   Placeholder="Enter your Phone Number" />

            <Label Text="Email Adresse" Margin="10" />
            <Entry Text="{Binding User.Brand}" 
                   Placeholder="Enter your Email adresse" />

            <Label Text="Password" Margin="10" />
            <Entry Text="{Binding User.Model}" 
                   Placeholder="Enter your password" />

            <HorizontalStackLayout Grid.Column="0" HorizontalOptions="Center" Margin="0,20">
                <Button Command="{Binding ConfirmCommand}"
                        Text="Confirm"
                        CharacterSpacing="1"
                        BackgroundColor="LightGreen"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand"
                        Margin="10,0"
                        WidthRequest="150"/>

                <Button Command="{Binding CancelCommand}"
                        Text="Cancel"
                        CharacterSpacing="1"
                        BackgroundColor="PaleVioletRed"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand"
                        Margin="10,0"
                        WidthRequest="150"/>
            </HorizontalStackLayout>
        </StackLayout>
    </Grid>

</ContentPage>
