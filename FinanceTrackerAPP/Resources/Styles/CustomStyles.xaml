<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Color x:Key="TitleColor">NavajoWhite</Color>
    <Color x:Key="BodyColor">AntiqueWhite</Color>
    
    <Style x:Key="LabelStyle" TargetType="Label">
        <Setter Property="Margin" Value="10,5" />
        <Setter Property="FontSize" Value="Medium" />
        <Setter Property="TextColor" Value="AntiqueWhite" />
    </Style>

    <Style x:Key="TitleLabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="Header" />
        <Setter Property="TextColor" Value="NavajoWhite" />
        <Setter Property="HorizontalOptions" Value="Center" />
    </Style>

    <Style x:Key="SubtitleLabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="Title" />
        <Setter Property="TextColor" Value="AntiqueWhite" />
        <Setter Property="Margin" Value="10" />
    </Style>

    <Style x:Key="EntryStyle" TargetType="Entry">
        <Setter Property="PlaceholderColor" Value="Gray" />
        <Setter Property="Margin" Value="4,5" />
    </Style>

    <Style x:Key="EditorStyle" TargetType="Editor">

        <Setter Property="HeightRequest" Value="500" />
        <Setter Property="PlaceholderColor" Value="Gray" />
        <Setter Property="Margin" Value="50,10" />
    </Style>

    <Style x:Key="ConfirmButtonStyle" TargetType="Button">
        <Setter Property="Text" Value="Confirm" />
        <Setter Property="BackgroundColor" Value="LightGreen" />
        <Setter Property="CharacterSpacing" Value="1" />
        <Setter Property="HorizontalOptions" Value="FillAndExpand" />
        <Setter Property="VerticalOptions" Value="FillAndExpand" />
        <Setter Property="Margin" Value="10,0" />
        <Setter Property="WidthRequest" Value="150" />
        <Setter Property="FontAttributes" />
    </Style>

    <Style x:Key="CancelButtonStyle" TargetType="Button">
        <Setter Property="Text" Value="Cancel" />
        <Setter Property="BackgroundColor" Value="PaleVioletRed" />
        <Setter Property="CharacterSpacing" Value="1" />
        <Setter Property="HorizontalOptions" Value="Fill"/>
        <Setter Property="VerticalOptions" Value="Fill" />
        <Setter Property="Margin" Value="10,0" />
        <Setter Property="WidthRequest" Value="150" />
        <Setter Property="FontAttributes"/>
    </Style>

    <Style x:Key="PickerStyle" TargetType="Picker">
        <Setter Property="Margin" Value="10" />
    </Style>

    <Style x:Key="StepperStyle" TargetType="Stepper">
        <Setter Property="Minimum" Value="0" />
        <Setter Property="Maximum" Value="10" />
        <Setter Property="Increment" Value="0.5" />
        <Setter Property="Margin" Value="10" />
    </Style>

    <Style x:Key="DatePickerStyle" TargetType="DatePicker">
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="Margin" Value="0,15" />
    </Style>

    <Style x:Key="TimePickerStyle" TargetType="TimePicker">
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="Format" Value="HH:mm" />
        <Setter Property="Margin" Value="0,10" />
    </Style>


</ResourceDictionary>
